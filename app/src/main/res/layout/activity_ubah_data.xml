<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".views.UbahDataActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Nama Awal"
            android:theme="@style/myHintStyle"
            app:hintTextColor="@color/primary_variant_color"
            android:textColor="@color/primary_variant_color"
            android:textColorHint="@color/primary_variant_color"
            android:backgroundTint="@color/primary_variant_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:gravity="left"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_baseline_first"
                android:drawableTint="@color/primary_variant_color"
                android:drawablePadding="10dp"
                android:inputType="textCapWords"
                android:id="@+id/etFirstName"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Nama Akhir"
            android:theme="@style/myHintStyle"
            app:hintTextColor="@color/primary_variant_color"
            android:textColor="@color/primary_variant_color"
            android:textColorHint="@color/primary_variant_color"
            android:backgroundTint="@color/primary_variant_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:gravity="left"
                android:drawableLeft="@drawable/ic_baseline_last"
                android:drawableTint="@color/primary_variant_color"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:id="@+id/etLastName"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Nomor Telepon"
            android:theme="@style/myHintStyle"
            app:hintTextColor="@color/primary_variant_color"
            android:textColor="@color/primary_variant_color"
            android:textColorHint="@color/primary_variant_color"
            android:backgroundTint="@color/primary_variant_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:gravity="left"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawableTint="@color/primary_variant_color"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:inputType="text"
                android:id="@+id/etPhoneNumber"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btnUbahDataDiri"
        android:text="Ubah Data Diri"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:backgroundTint="@color/primary_variant_color"
        android:layout_height="60dp"/>

</RelativeLayout>