<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.ProfileFragment">

    <RelativeLayout
        android:paddingTop="50dp"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="50dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary_variant_color"
                app:cardPreventCornerOverlap="false"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="20dp"
                    android:src="@drawable/user"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvFullName"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="John Doe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvUsername"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:textColor="#444444"
                android:textSize="16sp"
                android:text="username@example.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:textColor="#444444"
                android:textSize="14sp"
                android:text="+62812345678"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:backgroundTint="@color/grey_almost_white"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tvUbahDataDiri"
                    android:textColor="@color/primary_variant_color"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="Ubah Data Diri"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:drawableTint="@color/primary_variant_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:backgroundTint="@color/grey_almost_white"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tvUbahKataSandi"
                    android:textColor="@color/primary_variant_color"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="Ubah Kata Sandi"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:drawableTint="@color/primary_variant_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:backgroundTint="@color/grey_almost_white"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tvVoucher"
                    android:textColor="@color/primary_variant_color"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="Voucher"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:drawableTint="@color/primary_variant_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:backgroundTint="@color/grey_almost_white"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tvPusatBantuan"
                    android:textColor="@color/primary_variant_color"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="Pusat Bantuan"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:drawableTint="@color/primary_variant_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:backgroundTint="@color/grey_almost_white"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tvPengaturan"
                    android:textColor="@color/primary_variant_color"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="Pengaturan"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:drawableTint="@color/primary_variant_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btnLogout"
            android:text="Keluar"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</FrameLayout>