<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".views.SearchTripActivity">

    <TextView
        android:background="@android:color/white"
        android:textAllCaps="true"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/primary_variant_color"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Pilih Perjalanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:id="@+id/rvListTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvNone"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Perjalanan yang anda cari belum ada."
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>